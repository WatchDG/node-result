{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es6",
    "declaration": true,
    "strict": true,
    "sourceMap": false,
    "removeComments": true,
    "skipLibCheck": false,
    "rootDir": "src",
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}